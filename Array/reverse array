class Reverse
{
    // Complete the function
    // str: input string
    public static String reverseWord(String str)
    {
        // Reverse the string str
       int n=str.length();
       int indx=n-1;
       String st="";
       for(int i=0;i<n;i++){
           char c=str.charAt(indx-i);
           st+=c;
       }
       return st;
    }
}
